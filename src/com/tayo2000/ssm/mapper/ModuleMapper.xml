<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    " http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">  
    
  <mapper namespace="com.tayo2000.ssm.mapper.ModuleMapper">
  	<select id="list" resultType="Module">
  		select * from module order by moduleId
  	</select>
  	
	<delete id="delete" parameterType="String">
		delete from module where moduleName=#{value} 
	</delete>
	
	<insert id="add" parameterType="Module">
		insert into module(moduleName,moduleDesc) 
		values(#{moduleName},#{moduleDesc})
	</insert>
	
	<update id="update" parameterType="Module">
    	update module
    	set moduleDesc=#{moduleDesc}
    	where moduleName=#{moduleName}
    </update>
  </mapper>